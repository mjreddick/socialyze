<div class="jumbotron" id="home-splash">

  <img src="https://s3-us-west-1.amazonaws.com/socialyze/socialyze2.png" class="img-responsive center-block" id="home-logo">
  <h1 class="text-center" id="glyphs">
    <i class="fa fa-2x fa-area-chart"></i>&nbsp;
    <i class="fa fa-2x fa-bar-chart"></i>&nbsp;
    <i class="fa fa-2x fa-line-chart"></i>
  </h1>
  <h1 class="text-center">Social Media Analytics</h1>
  <% if @current_user %>
    <%= link_to("Socialyze your account", user_path(@current_user) , :class => "btn btn-social center-block btn-lg") %>
  <% else %>
    <button type="button" class="btn btn-social btn-lg center-block" data-toggle="modal" data-target="#sign-up">
      Sign up
    </button>
  
  <% end %>
</div>

<div class="row what">
  <div class="col-sm-4 icon">
    <img src="https://s3-us-west-1.amazonaws.com/socialyze/Flat_Icons_21.png" class="img-responsive center-block">
    <h1 class="text-center">Authorize</h1>
    <p class="text-center">Sign up and attach your Twitter Account. <br>We only ask for read access.</p>
  </div>
  <div class="col-sm-4 icon">
    <img src="https://s3-us-west-1.amazonaws.com/socialyze/Flat_Icons_5.png" class="img-responsive center-block">
    <h1 class="text-center">Analyze</h1>
    <p class="text-center">Once authorized, our workers will dive into your and your followers' tweets to create a custom analysis just for you!</p>
  </div>
  <div class="col-sm-4 icon">
    <img src="https://s3-us-west-1.amazonaws.com/socialyze/Flat_Icons_16.png" class="center-block">
    <h1 class="text-center">Socialyze</h1>
    <p class="text-center">You will receive an email with a link to your results! Share them with your friends and compare!</p>
  </div>
  
</div>

<div class="modal fade" id="sign-up" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h2 class="modal-title text-center" id="myModalLabel"><%= image_tag("https://s3-us-west-1.amazonaws.com/socialyze/user.png", :class=> "center-block img-responsive") %></h2>
      </div>
      <div class="modal-body">
        <div class="user-form">
          <%= simple_form_for @user, :url => users_path, :method => :post do |f| %>

          <%= f.input :name, placeholder: 'Your Name' %>

          <%= f.input :email, placeholder: 'Your Email Address' %>

          <%= f.input :password, placeholder: "Create a password" %>

          <%= f.input :password_confirmation, placeholder: "Verify Password" %>

          <%= f.button :submit, "Lets Go", :class => "btn btn-primary center-block" %>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>









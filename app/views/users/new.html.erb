<div class= 'row' id="signup-splash">
    <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1" id="signup-form">
      <h1 class="text-center">Get Started</h1>
      <%= render 'form', object: @user %>
      <h4 class="text-center">Already a user?&nbsp;<small><%= link_to "Log in", login_path, :remote => true, "data-toggle" => "modal", "data-target" => "#log-in" %></small></h4>
    </div>
</div>
  

<div class="modal fade" id="log-in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h2 class="modal-title text-center" id="myModalLabel">Log in!</h2>
      </div>
      <div class="modal-body">
        <%= render 'sessions/form' %>
      </div>
    </div>
  </div>
</div>

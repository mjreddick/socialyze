<div class="jumbotron" id="user-show">
  <h1 class="text-center">
    Get Started! 
    <br>
    <small>Authorize your Twitter Account</small>
  </h1>
  <% if @user.twitter_account %>
  <p class="text-center">Whats Next</p>
  <% else %>
  <p class="text-center">Click to get started!</p>
  <a href="/auth/twitter">
    <%= image_tag("http://icons.iconarchive.com/icons/sicons/flat-shadow-social/128/twitter-icon.png", :class => "img-responsive center-block") %>
  </a>
  <% end %>
</div>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div id="carousel" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#carousel" data-slide-to="0" class="active"></li>
        <li data-target="#carousel" data-slide-to="1"></li>
        <li data-target="#carousel" data-slide-to="2"></li>
      </ol>

      <!-- Wrapper for slides -->
      <div class="carousel-inner" role="listbox">
        <div class="item active">
          <img class="img-responsive" src="https://s3-us-west-1.amazonaws.com/socialyze/Screen+Shot+2015-02-18+at+6.20.31+PM.png" alt="bar-graph">
          <div class="carousel-caption">
            Bar Graph
          </div>
        </div>
        <div class="item">
          <img class="img-responsive" src="https://s3-us-west-1.amazonaws.com/socialyze/Screen+Shot+2015-02-18+at+7.24.50+PM.png" alt="pie-chart">
          <div class="carousel-caption">
            Pie chart
          </div>
        </div>
        ...
      </div>

      <!-- Controls -->
      <a class="left carousel-control" href="#carousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#carousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</div>  
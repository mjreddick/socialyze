
<% if @user.twitter_result%>
<div class="row text-center center-block" id="user-show-result">
  <h1>Your Results Are Ready</h1>
  <p>Click <%= link_to("Here", result_path(@user.twitter_result)) %> to see your results!</p>
</div>
<% elsif !@user.twitter_account.nil? || !@user.twitter_result.nil?  %>
<div class="row text-center center-block" id="user-show-result">
  <h1 class="text-center">What's next?</h1>
  <h1><small>Your Socialytics are being processed</small></h1>
  <p>You will receive an email when your results are ready</p>
  <%= image_tag("https://s3-us-west-1.amazonaws.com/socialyze/animated_twitter_.gif", class: "img-responsive center-block") %>
</div>
<% else %>
<div class="row" id="user-show">
  <h1 class="text-center">
    Get Started! 
    <br>
    <small>Authorize your Twitter Account</small>
  </h1>
  <p class="text-center">Click to get started!</p>
  <a href="/auth/twitter">
    <%= image_tag("http://icons.iconarchive.com/icons/sicons/flat-shadow-social/128/twitter-icon.png", :class => "img-responsive center-block") %>
  </a>
</div>
<% end %>
<div class="row text-center" id="sample-graph">
  <h1>Take a look at some sample charts</h1>
  <div class="col-md-10 col-md-offset-1">
    <div id="carousel" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#carousel" data-slide-to="0" class="active"></li>
        <li data-target="#carousel" data-slide-to="1"></li>
      </ol>

      <!-- Wrapper for slides -->
      <div class="carousel-inner" role="listbox">
        <div class="item active">
          <img class="img-responsive" src="https://s3-us-west-1.amazonaws.com/socialyze/Screen+Shot+2015-02-18+at+6.20.31+PM.png" alt="bar-graph">

        </div>
        <div class="item">
          <img class="img-responsive" src="https://s3-us-west-1.amazonaws.com/socialyze/Screen+Shot+2015-02-18+at+7.24.50+PM.png" alt="pie-chart">

        </div>
      </div>

      <!-- Controls -->
      <a class="left carousel-control" href="#carousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#carousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</div>  

<% if @user.twitter_result %>
<div class="row" id="user-show-update">
  <h1 class="text-center">
    Update your Twitter Info!
    <br>
    <small>Press to Update</small>
  </h1><br><br>
  <a href="/auth/twitter">
    <%= image_tag("http://icons.iconarchive.com/icons/sicons/flat-shadow-social/128/twitter-icon.png", :class => "img-responsive center-block") %>
  </a>
</div>

<% end %>